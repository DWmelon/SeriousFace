<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg">

    <include layout="@layout/layout_top_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <EditText
            android:id="@+id/et_feedback_content"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/et_bg_login"
            android:gravity="left|top"
            android:hint="赏个么么哒，或者啪啪啪！你的建议会让我们更加努力！"
            android:paddingBottom="15dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="15dp"
            android:layout_marginTop="60dp"
            android:textColor="@android:color/black"
            android:textColorHint="@color/text_hint"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_qq_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bg_login"
            android:gravity="left|top"
            android:hint="请留下邮箱或QQ，我们希望能更方便地联系你~"
            android:singleLine="true"
            android:paddingBottom="5dp"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="5dp"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black"
            android:textColorHint="@color/text_hint"
            android:textSize="15sp" />


    </LinearLayout>

</LinearLayout>